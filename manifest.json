{
  "name": "GitHub Diff Navigator",
  "version": "0.0.9",
  "manifest_version": 2,
  "description": "GitHub Diff Navigator allows you to easily navigate through the changes in a file that has been edited on GitHub.",
  
  "page_action": {
	"default_title": "GitHub Diff Navigator",
	"default_popup": "popup.html"
  },
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "permissions" : [
    "declarativeContent"
  ],
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/edit/*",
		"http://github.com/*/edit/*"
      ],
      "js": [
	    "src/ext/jquery-2.1.3.min.js",
        "src/inject.js"
      ]
    }
  ],
  "homepage_url": "https://github.com/daattali/github-diff-navigator-extension"
}
